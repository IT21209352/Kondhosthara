<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:background="#533087"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".FinanceHomeActivity"
    android:id="@+id/financeLayout"
    >

    <Button
        android:id="@+id/goToFinanceMainBtnFina"
        android:layout_width="220dp"
        android:layout_height="90dp"
        android:layout_marginBottom="50dp"
        android:backgroundTint="@color/white"
        android:drawableRight="@drawable/baseline_payment_24"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="@string/go_to_payments"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:cornerRadius="50dp" />

    <Button
        android:id="@+id/goToHistoryBtnFina"
        android:layout_width="220dp"
        android:layout_height="90dp"
        android:layout_marginBottom="50dp"
        android:backgroundTint="@color/white"
        android:drawableLeft="@drawable/pay_hist"
        android:fontFamily="sans-serif-medium"
        android:text="@string/payment_history"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:cornerRadius="50dp" />

    <Button
        android:id="@+id/goToOwnerDataBtnFina"
        android:layout_width="220dp"
        android:layout_height="90dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/white"
        android:drawableRight="@drawable/owner_det"
        android:fontFamily="sans-serif-medium"
        android:text="@string/owner_details"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:cornerRadius="50dp" />

    <Button
        android:id="@+id/chatbtn"
        android:layout_width="220dp"
        android:layout_height="90dp"
        android:backgroundTint="@color/white"
        android:drawableLeft="@drawable/chat"
        android:text="Chat"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:cornerRadius="50dp"
        android:layout_marginTop="20dp"
        />


    <Button
        android:id="@+id/logoutBtnfinance"
        android:layout_width="192dp"
        android:layout_height="69dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:backgroundTint="#D03A3939"
        android:drawableRight="@drawable/baseline_logout_24"
        android:gravity="center"
        android:text="@string/logout"
        android:textSize="20sp" />


</LinearLayout>